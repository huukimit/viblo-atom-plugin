{
  ".platform-darwin atom-workspace": {
    "cmd-alt-s": "viblo-view:settings",
    "escape": "viblo-view:publish"
  },
  ".platform-darwin .markdown-preview, .platform-darwin atom-text-editor": {
    "cmd-alt-p": "viblo-view:publish"
  },

  ".platform-win32 atom-workspace, .platform-linux atom-workspace": {
    "ctrl-alt-s": "viblo-view:settings",
    "escape": "viblo-view:publish"
  },
  ".platform-win32 atom-text-editor, .platform-win32 .markdown-preview, .platform-linux atom-text-editor, .platform-linux .markdown-preview" : {
    "ctrl-alt-p": "viblo-view:publish"
  }
}
