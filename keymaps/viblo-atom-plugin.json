{
  ".platform-win32 atom-workspace, .platform-linux atom-workspace": {
    "alt-S": "viblo:settings",
    "ctrl-alt-v": "viblo:toggle-preview",
    "ctrl-shift-s": "viblo:save-post"
  },
  ".platform-darwin atom-workspace, .platform-linux atom-workspace": {
    "alt-S": "viblo:settings",
    "cmd-alt-v": "viblo:toggle-preview",
    "cmd-shift-s": "viblo:save-post"
  },
  ".platform-win32 atom-text-editor, .platform-win32 .viblo-markdown-preview, .platform-linux atom-text-editor, .platform-linux .viblo-markdown-preview": {
    "ctrl-alt-v": "viblo:toggle-preview"
  },
  ".platform-darwin .viblo-markdown-preview": {
    "cmd-+": "markdown-preview:zoom-in",
    "cmd-=": "markdown-preview:zoom-in",
    "cmd--": "markdown-preview:zoom-out",
    "cmd-_": "markdown-preview:zoom-out",
    "cmd-0": "markdown-preview:reset-zoom"
  },
  ".platform-win32 .viblo-markdown-preview, .platform-linux .viblo-markdown-preview": {
    "ctrl-+": "markdown-preview:zoom-in",
    "ctrl-=": "markdown-preview:zoom-in",
    "ctrl--": "markdown-preview:zoom-out",
    "ctrl-_": "markdown-preview:zoom-out",
    "ctrl-0": "markdown-preview:reset-zoom"
  }
}
